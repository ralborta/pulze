{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": ["nodejs_20"]
        },
        "install": {
          "cmds": [
            "corepack enable",
            "corepack prepare pnpm@latest --activate",
            "pnpm install"
          ]
        },
        "build": {
          "cmds": [
            "pnpm --filter @pulze/bot build"
          ]
        }
      },
      "start": {
        "cmd": "node apps/bot/dist/app.js"
      }
    }
  },
  "deploy": {
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
